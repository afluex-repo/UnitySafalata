@model UnitySafalata.Models.DashBoard
@{
    ViewBag.Title = "AssociateDashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-header">
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="section-header-breadcrumb-content">
                <h4>Dashboard</h4>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-12">
        Login Id : <h6>@ViewBag.LoginId</h6>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12">
       Name : <h6>@ViewBag.DisplayName</h6>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12">
        Date of Joining : <h6>@ViewBag.JoiningDate</h6>
    </div>
  
</div>
<br />
<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="card card-sales-widget card-bg-blue-gradient">
            <div class="card-icon shadow-primary bg-blue">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="card-wrap pull-right">
                <div class="card-header">
                    <h3>@ViewBag.TotalDownline</h3>
                    <h4>Total Team</h4>
                </div>
            </div>
            <div class="card-chart">
                <div id="chart-1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="card card-sales-widget card-bg-yellow-gradient">
            <div class="card-icon shadow-primary bg-warning">
                <i class="fas fa-user"></i>
            </div>
            <div class="card-wrap pull-right">
                <div class="card-header">
                    <h3>@ViewBag.TotalDirects</h3>
                    <h4>Direct</h4>
                </div>
            </div>
            <div class="card-chart">
                <div id="chart-2"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="card card-sales-widget card-bg-orange-gradient">
            <div class="card-icon shadow-primary bg-hibiscus">
                <i class="fas fa-user"></i>
            </div>
            <div class="card-wrap pull-right">
                <div class="card-header">
                    <h3>@ViewBag.TotalActive</h3>
                    <h4>Active Ids</h4>
                </div>
            </div>
            <div class="card-chart">
                <div id="chart-3"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card card-sales-widget card-bg-green-gradient">
                <div class="card-icon shadow-primary bg-green">
                    <i class="fas fa-rupee-sign"></i>
                </div>
                <div class="card-wrap pull-right">
                    <div class="card-header">
                        <h3>@ViewBag.TotalPayout</h3>
                        <h4>Total Payout</h4>
                    </div>
                </div>
                <div class="card-chart">
                    <div id="chart-4"></div>
                </div>
            </div>
        </div>
    @*<div class="col-lg-3 col-md-6 col-sm-12">
        <div class="card card-sales-widget card-bg-cyan-gradient">
            <div class="card-icon shadow-primary bg-cyan">
                <i class="fas fa-tag"></i>
            </div>
            <div class="card-wrap pull-right">
                <div class="card-header">
                    <h3>@ViewBag.Recognition</h3>
                    <h4>Recognition</h4>
                </div>
            </div>
            <div class="card-chart">
                <div id="chart-5"></div>
            </div>
        </div>
    </div>*@
</div>

<div class="row">
    <div class="col-lg-6 col-md-12 col-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>TopUp Details</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example22" class="display nowrap table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Package Name</th>
                                <th>Amount</th>
                                <th>Status</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstinvestment != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstinvestment)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.ProductName</td>
                                            <td>@Item.Amount</td>
                                            <td>@Item.Status</td>


                                        </tr>
                                        i++;
                                    }

                                }
                            }

                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 col-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>Business Details</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example22" class="display nowrap table table-hover table-striped table-bordered">

                        <thead>
                            <tr>
                                <th>Team</th>
                                <th>Total</th>
                                <th>Paid</th>
                                <th>C/F</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-left">
                                <td>Left</td>
                                <td>@ViewBag.TotalBusinessLeft</td>
                                <td>@ViewBag.PaidBusinessLeft</td>
                                <td>@ViewBag.CarryLeft</td>


                            </tr>
                            <tr class="text-left">
                                <td>Right</td>
                                <td>@ViewBag.TotalBusinessRight</td>
                                <td>@ViewBag.PaidBusinessRight</td>
                                <td>@ViewBag.CarryRight</td>


                            </tr>

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="modal fade" id="myModal" role="dialog" style="display: none">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                <h4 class="modal-title" style="color: red">NOTICE</h4>
            </div>
            <div class="modal-body" style="color: black">
                <p>
                    Dear Associates,
                    5% of your Payout Balance will be deducted for Product Wallet.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="closeModal();">Close</button>
            </div>
        </div>

    </div>
</div>

<script src="../../vendor/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //$("#myModal").modal('show');
    });

    function closeModal() {
        $("#myModal").hide();
        $('body').removeClass().removeAttr('style');
        $('.modal-backdrop').remove();
    }
</script>

<script>

    function savemessage() {
        $(".errortext").removeClass("errortext");
        if ($('#txtmessage').val() == '') {
            $("#txtmessage").addClass('errortext');
            $('#txtmessage').focus();
            return false;
        }
        $.ajax({
            url: "/User/SaveMessages",
            Type: "Get",
            DataType: "JSON",
            data: { Message: $("#txtmessage").val(), MessageBy: "Associate" },
            success: function (data) {
                if (data.Result == "1") {
                    alert('Message Send Successfully');
                    window.location.href = '@Url.Action("AssociateDashBoard", "User")';
                }
                else {
                    alert(data.Result);
                    // window.location.href = '@Url.Action("Registration", "Home")';
                }


            }

        });
    }


</script>
<style>
    .modal-backdrop.show {
        opacity: .5;
        z-index: 0 !important;
    }
</style>
