@model UnitySafalata.Models.Profile
@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- /.row -->
@using (Html.BeginForm("ViewProfile", "User", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{

    
            <div class="section-header">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <div class="section-header-breadcrumb-content">
                            <h4>View Profile</h4>
                        </div>
                    </div>

                </div>
            </div>

            <span style="color:red"> @TempData["UpdateProfile"]</span>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        
                        <div class="panel-body">

                            <fieldset>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>First Name <span style="color:red">*</span></label>

                                            @if (Model.LastName != "")
                                            {


                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @disabled = "disabled" })
                                            }
                                            else
                                            {

                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.FirstName)
                                            }






                                            <br />
                                            <label>Last Name</label>

                                            @if (Model.LastName != "")
                                            {

                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @disabled = "disabled" })
                                            }
                                            else
                                            {


                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.LastName)
                                            }



                                            <br />
                                            <label>Mobile <span style="color:red">*</span></label>
                                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Mobile)
                                        </div>
                                    </div>
                                    @*<div class="col-lg-3">
                                            <div class="form-group">

                                            </div>
                                        </div>*@
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <img src="@Model.ProfilePicture" height="190" width="250" />
                                            <input type="file" name="fileProfilePicture" id="Image" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Spill Id</label>
                                            @Html.TextBoxFor(m => m.SponsorId, new { @class = "form-control", @disabled = "disabled" })
                                            @Html.ValidationMessageFor(m => m.SponsorId)
                                            @*<input type ="text"  value="@item1.SponsorId" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Spill Name</label>
                                            @Html.TextBoxFor(m => m.SponsorName, new { @class = "form-control", @disabled = "disabled" })
                                            @Html.ValidationMessageFor(m => m.SponsorName)
                                            @*<input type ="text"  value="@item1.SponsorName" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Email Id</label>
                                            @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.EmailId)
                                            @*<input type ="text" id="txtEmail"  value="@item1.EmailId" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Joining Date</label>
                                            @Html.TextBoxFor(m => m.JoiningDate, new { @class = "form-control", @disabled = "disabled" })
                                            @Html.ValidationMessageFor(m => m.JoiningDate)
                                            @*<input type ="text"  value="@item1.JoiningDate" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Adhar No</label>
                                            @Html.TextBoxFor(m => m.AdharNo, new { @class = "form-control", @Maxlength = "12", @onkeypress = "return isNumberKey(event);", @readonly="true" })
                                            @Html.ValidationMessageFor(m => m.AdharNo)
                                            @*<input type ="text"  value="@item1.JoiningDate" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Account Number <span style="color:red">*</span></label>
                                            @if (Model.AccountNumber != "")
                                            {

                                                @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control", @disabled = "disabled" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.AccountNumber)
                                            }

                                            

                                            @*<input type ="text" id="txtEmail"  value="@item1.EmailId" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>IFSC <span style="color:red">*</span></label>

                                            @if (Model.IFSC != "")
                                            {
                                                @Html.TextBoxFor(m => m.IFSC, new { @class = "form-control", @disabled = "disabled" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(m => m.IFSC, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.IFSC)
                                            }






                                            @*<input type ="text"  value="@item1.JoiningDate" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Bank Name <span style="color:red">*</span></label>
                                           @if (Model.BankName != "")
                                           {
                                            @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", @disabled = "disabled" })
                                           }
                                           else
                                           {

                                            @Html.TextBoxFor(m => m.BankName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.BankName)
                                           }
                                            @*<input type ="text" id="txtEmail"  value="@item1.EmailId" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Bank Branch <span style="color:red">*</span></label>
                                            @if (Model.BankBranch != "")
                                            { @Html.TextBoxFor(m => m.BankBranch, new { @class = "form-control", @disabled = "disabled" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(m => m.BankBranch, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.BankBranch)
                                            }


                                           
                                            @*<input type ="text"  value="@item1.JoiningDate" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <input type="submit" id="btnUpdate" class="btn btn-success pull-right" name="btnUpdate" value="Update" onclick="return editProfile()" />
                                            <input type="button" id="btnEdit" class="btn btn-primary pull-right" value="Edit" onclick="editProfile()" style="display:none" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
            }
            <style>
                .errortext {
                    border: 1px solid red !important;
                    background-color: #fff0f0 !important;
                }
            </style>
            <script>
                function editProfile() {
                    $(".errortext").removeClass("errortext");
                    if ($('#FirstName').val() == '') {
                        $("#FirstName").addClass('errortext');
                        $('#FirstName').focus();
                        return false;
                    }
                    if ($('#Mobile').val() == '') {
                        $("#Mobile").addClass('errortext');
                        $('#Mobile').focus();
                        return false;
                    }
                    if ($('#AccountNumber').val() == '') {
                        $("#AccountNumber").addClass('errortext');
                        $('#AccountNumber').focus();
                        return false;
                    }
                    if ($('#IFSC').val() == '') {
                        $("#IFSC").addClass('errortext');
                        $('#IFSC').focus();
                        return false;
                    }
                    if ($('#BankName').val() == '') {
                        $("#BankName").addClass('errortext');
                        $('#BankName').focus();
                        return false;
                    }
                    if ($('#BankBranch').val() == '') {
                        $("#BankBranch").addClass('errortext');
                        $('#BankBranch').focus();
                        return false;
                    }
                    return true;
                }


                function isNumberKey(evt) {

                    var charCode = (evt.which) ? evt.which : event.keyCode;
                    if (charCode != 46 && charCode > 31
                      && (charCode < 48 || charCode > 57))
                        return false;

                    return true;
                }
            </script>
